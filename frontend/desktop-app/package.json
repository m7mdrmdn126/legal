{
  "name": "legal-cases-desktop",
  "version": "1.0.0",
  "description": "Legal Cases Management Desktop Application",
  "main": "public/electron.js",
  "author": "Legal Cases Team",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-hook-form": "^7.43.0",
    "chart.js": "^4.2.0",
    "react-chartjs-2": "^5.2.0",
    "dayjs": "^1.11.7",
    "react-toastify": "^9.1.1",
    "react-scripts": "5.0.1",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "start": "GENERATE_SOURCEMAP=false react-scripts start",
    "start-quiet": "GENERATE_SOURCEMAP=false NODE_NO_WARNINGS=1 react-scripts start",
    "start-win": "cross-env GENERATE_SOURCEMAP=false react-scripts start",
    "start-quiet-win": "cross-env GENERATE_SOURCEMAP=false NODE_NO_WARNINGS=1 react-scripts start",
    "build": "GENERATE_SOURCEMAP=false PUBLIC_URL=./ react-scripts build",
    "build-win": "cross-env GENERATE_SOURCEMAP=false PUBLIC_URL=./ react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run start-quiet\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev-win": "concurrently \"npm run start-quiet-win\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-clean": "NODE_NO_WARNINGS=1 NODE_OPTIONS=\"--no-deprecation\" npm run electron-dev",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-win": "npm run build && electron-builder --win --x64",
    "electron-pack-linux": "npm run build && electron-builder --linux --x64",
    "electron-pack-mac": "npm run build && electron-builder --mac",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-all": "npm run build && electron-builder --win --linux --mac",
    "build-windows": "npm run build && electron-builder --win",
    "build-linux": "npm run build && electron-builder --linux",
    "build-mac": "npm run build && electron-builder --mac",
    "start:win": "set GENERATE_SOURCEMAP=false && react-scripts start",
    "build:win": "set GENERATE_SOURCEMAP=false && set PUBLIC_URL=./ && react-scripts build",
    "electron-dev:win": "concurrently \"npm run start:win\" \"wait-on http://localhost:3000 && electron .\""
  },
  "build": {
    "appId": "com.legalcases.desktop",
    "productName": "نظام إدارة القضايا القانونية",
    "copyright": "Copyright © 2024 Legal Cases Management System",
    "directories": {
      "output": "dist",
      "buildResources": "build-assets"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      ".env",
      "node_modules/**/*"
    ],
    "extraResources": [
      ".env"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build-assets/icon.ico",
      "artifactName": "Legal-Cases-Management-${version}-Windows-Setup.${ext}",
      "publish": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build-assets/icon.png",
      "artifactName": "Legal-Cases-Management-${version}-Linux.${ext}",
      "category": "Office",
      "publish": null
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "icon": "build-assets/icon.icns",
      "artifactName": "Legal-Cases-Management-${version}-macOS.${ext}",
      "publish": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build-assets/icon.ico",
      "uninstallerIcon": "build-assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نظام إدارة القضايا القانونية",
      "menuCategory": true,
      "displayLanguageSelector": false
    },
    "appImage": {
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
